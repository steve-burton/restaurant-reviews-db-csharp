<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="../Content/css/styles.css">
		<title>Restaurant Reviews</title>
	</head>
	<body>
		<div class="container">
			<div class="jumbotron">
				<div class="row">
					<div class="col-md-12">
						<h2>Here are the restaurants in this cuisine type</h1>
            @if (@Model["restaurants"].Count == 0)
            {
              <h3>No restaurants have been added yet</h3>
            }
						<ul>
							@foreach(var restaurant in @Model["restaurants"])
							{
								<li><@restaurant.GetName()</li>
							}
						</ul>
					</div>
				</div>
			</div>
			<div class="jumbotron">
				<h3><a href="/add-new-restaurant">Add a new Restaurant</a></h3>
				<h3><a href="/add-new-cuisine">Add a new Cuisine</a></h3>
			</div>
		</div>
	</body>
</html>
